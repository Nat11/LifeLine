<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="smartSystems.com.bloodBank.Activities.UserActivity"
    tools:showIn="@layout/app_bar_user">

    <LinearLayout
        android:id="@+id/layoutUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username: "
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:saveEnabled="false"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutUser"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:saveEnabled="false"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutAddr"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: "
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:saveEnabled="false"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutPhone"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: "
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:saveEnabled="false"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutBlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutGender"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBlood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Type: "
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etBloodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:saveEnabled="false"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutDonor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LayoutBlood"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDonor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor: "
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etIsDonor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:saveEnabled="false"
            android:textSize="17dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnDefaultSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LayoutDonor"
        android:layout_marginTop="30dp"
        android:background="@drawable/red_button_bg"
        android:text="@string/begin_your_search"
        android:textColor="@color/white"
        android:textSize="15dp" />


</RelativeLayout>
