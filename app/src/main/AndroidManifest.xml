<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smartSystems.com.bloodBank">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateHidden"
        android:theme="@style/AppTheme.Splash">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBehQroaBgMc3moHKYS87c65TQHiXG2BzQ" />

        <activity
            android:name="smartSystems.com.bloodBank.Activities.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="smartSystems.com.bloodBank.Activities.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="smartSystems.com.bloodBank.Activities.MainActivity" />
        <activity
            android:name="smartSystems.com.bloodBank.Activities.SignUpActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="smartSystems.com.bloodBank.Activities.ListUsersActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="smartSystems.com.bloodBank.Activities.DetailActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="smartSystems.com.bloodBank.Activities.UserActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.Splash" />
        <activity
            android:name="smartSystems.com.bloodBank.Activities.MapsActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="smartSystems.com.bloodBank.Activities.UpdateInfoActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="smartSystems.com.bloodBank.Activities.UserActivity" />
        <activity android:name="smartSystems.com.bloodBank.Activities.ResetPasswordActivity" />
    </application>

</manifest>